//Os primeiros dois anos da vida de um cão contam como 10,5 anos caninos cada. 
//Cada ano seguinte equivale a 4 anos caninos.

//criar uma variavel com a idade
const myAge = 24;

//criar uma variavel com os dois primeiros anos
let earlyYears = 2;

//multiplicar o valor salvo em earlyYears dos dois primeiros anos
earlyYears *= 10.5;

//como ja foi contabilizado os 2 primeiros anos, então subtraimos a idade
let laterYears = myAge - 2;

//multiplicar a variavel lateryears
laterYears *= 4;
console.log("early:" + earlyYears);
console.log("later:" + laterYears);

//idade em anos de cachorro
let myAgeInDogYears = earlyYears + laterYears;

let myName = "gustavo medeiros".toLowerCase();

//finalizar com uma interpolação de string
console.log(
  `My name is ${myName}. I am ${myAge} years old in human years which is ${myAgeInDogYears} years old in dog years.`
);
